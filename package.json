{
	"name": "@tldraw/simple-server-example",
	"description": "tldraw infinite canvas SDK (example node/bun servers).",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"author": {
		"name": "tldraw GB Ltd.",
		"email": "hello@tldraw.com"
	},
	"license": "MIT",
	"main": "./src/server/server.ts",
	"scripts": {
		"dev": "yarn dev-node",
		"dev-node": "concurrently -n server,client -c red,blue \"yarn dev-server-node\" \"yarn dev-client\"",
		"dev-bun": "concurrently -n server,client -c red,blue \"yarn dev-server-bun\" \"yarn dev-client\"",
		"dev-server-node": "yarn run -T tsx watch ./src/server/server.node.ts",
		"dev-server-bun": "npx bun --watch ./src/server/server.bun.ts",
		"build": "yarn run build:server && yarn build:client",
		"dev-client": "vite dev --host",
		"test-ci": "echo 'No tests yet'",
		"build:server": "tsc",
		"build:client": "vite build --app",
		"prod": "NODE_ENV=production node dist/src/server/server.node.js",
		"test": "yarn run -T vitest run --passWithNoTests",
		"test-coverage": "lazy inherit",
		"lint": "yarn run -T tsx ../../internal/scripts/lint.ts"
	},
	"devDependencies": {
		"@tldraw/sync": "4.0.2",
		"@types/bun": "^1.1.6",
		"@types/express": "^4.17.21",
		"@types/react": "^18.3.18",
		"@types/react-dom": "^18.3.5",
		"@types/ws": "^8.18.1",
		"@vitejs/plugin-react-swc": "^3.10.2",
		"concurrently": "^9.1.2",
		"itty-router": "^5.0.18",
		"lazyrepo": "0.0.0-alpha.27",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-router-dom": "^6.28.2",
		"tldraw": "4.0.2",
		"tsx": "^4.19.2",
		"typescript": "^5.8.3",
		"vite": "^7.0.1"
	},
	"dependencies": {
		"@fastify/cors": "^11.0.1",
		"@fastify/static": "^8.2.0",
		"@fastify/websocket": "^11.0.1",
		"@tldraw/sync-core": "4.0.2",
		"fastify": "5.4.0",
		"unfurl.js": "^6.4.0",
		"ws": "^8.18.0"
	}
}
